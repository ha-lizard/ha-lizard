    "GITHUB",
    "gnupg",
    "halizard",
    "HELPFILE",
    "HORIZ",
    "hyperconverged",
    "IRMC",
    "iscsi",
    "killall",
    "KILLALL",
    "localstatedir",
    "mailx",
    "Massimo",
    "noarch",
    "noninteractive",
    "noreplace",
    "onfail",
    "ONFAIL",
    "pipefail",
    "postun",
    "powerstate",
    "preun",
    "RETVAL",
    "rpmbuild",
    "rpmmacros",
    "RPMS",
    "rpmsign",
